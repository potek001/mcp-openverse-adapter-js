{\n  "$schema": "https://glama.ai/mcp/schemas/server.json",\n  "maintainers": ["potek001"],\n  "name": "openverse-adapter",\n  "version": "1.0.0",\n  "description": "MCP server for retrieving openly licensed images from Openverse",\n  "runtime": "node",\n  "entry": "index.js",\n  "tools": [\n    {\n      "name": "search",\n      "description": "Search for openly-licensed images on Openverse",\n      "parameters": {\n        "type": "object",\n        "required": ["query"],\n        "properties": {\n          "query": {\n            "type": "string",\n            "description": "Search terms"\n          },\n          "page": {\n            "type": "number",\n            "description": "Page number (default: 1)"\n          },\n          "page_size": {\n            "type": "number",\n            "description": "Results per page (default: 20, max: 500)"\n          },\n          "license_type": {\n            "type": "string",\n            "description": "License type (commercial or modification)"\n          }\n        }\n      }\n    },\n    {\n      "name": "fetch",\n      "description": "Get detailed information about a specific image",\n      "parameters": {\n        "type": "object",\n        "required": ["id"],\n        "properties": {\n          "id": {\n            "type": "string",\n            "description": "Openverse image ID (UUID format)"\n          }\n        }\n      }\n    }\n  ]\n}